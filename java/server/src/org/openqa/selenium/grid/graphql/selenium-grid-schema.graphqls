schema {
  query: GridQuery
}

scalar Uri

enum Status {
  UP
  DRAINING
  UNAVAILABLE
}

type Session {
  id: String!
  capabilities: String!
  startTime: String!
}

type Node {
  id: ID!
  uri: Uri!
  status: Status!
  maxSession: Int!
  sessions: [Session]!
  capabilities: String!
}

type GridQuery {
  grid: Grid!
}

type Grid {
  uri: Uri!
  nodes: [Node!]!
  totalSlots: Int
  usedSlots: Int
}
