        "**/*.cs",
    ]) + devtools_version_targets(),
    out = "WebDriver",
    internals_visible_to = [
        "WebDriver.Common.Tests",
    ],
    langversion = "10.0",
    resources = [
        "//javascript/atoms/fragments:find-elements.js",
        "//javascript/atoms/fragments:is-displayed.js",
